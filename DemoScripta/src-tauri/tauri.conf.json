{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Scripta Live",
  "version": "0.2.0",
  "identifier": "com.scripta.live",
  "build": {
    "beforeBuildCommand": "elm make src/Main.elm --output=assets/main.js",
    "beforeDevCommand": "",
    "frontendDist": "../assets"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Scripta Live",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "url": "index-tauri.html"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}